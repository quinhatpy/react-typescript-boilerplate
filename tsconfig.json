{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "build",
    "target": "ES5",
    "allowJs": false,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["./src/components/*"],
    },
    "resolveJsonModule": true,
  },
  "exclude": ["build", "node_modules"]
}
